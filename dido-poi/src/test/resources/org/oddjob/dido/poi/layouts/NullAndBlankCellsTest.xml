<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
    <job>
        <sequential>
            <jobs>
                <bean-bus>
                    <parts>
                        <bus:iterable-driver xmlns:bus="oddjob:beanbus">
                            <beans>
                                <list>
                                    <values>
                                        <bean class="org.oddjob.dido.poi.layouts.NullAndBlankCellsTest$Fruit"
                                              colour="red" fruit="apple"/>
                                        <bean class="org.oddjob.dido.poi.layouts.NullAndBlankCellsTest$Fruit"
                                              fruit="banana" quantity="17"/>
                                    </values>
                                </list>
                            </beans>
                        </bus:iterable-driver>
                        <bus:transformer xmlns:bus="oddjob:beanbus">
                            <function>
                                <dido:from-bean xmlns:dido="oddjob:dido"/>
                            </function>
                        </bus:transformer>
                        <dido:destination xmlns:dido="oddjob:dido" id="poi-write">
                            <to>
                                <dido-poi:workbook xmlns:dido-poi="oddjob:dido:poi">
                                    <output>
                                        <file file="${work.dir}/TextCellBlank.xlsx"/>
                                    </output>
                                </dido-poi:workbook>
                            </to>
                            <how>
                                <dido-poi:rows withHeadings="true" xmlns:dido-poi="oddjob:dido:poi"/>
                            </how>
                        </dido:destination>
                    </parts>
                </bean-bus>
                <bean-bus>
                    <parts>
                        <dido:driver xmlns:dido="oddjob:dido">
                            <from>
                                <dido-poi:workbook xmlns:dido-poi="oddjob:dido:poi">
                                    <input>
                                        <file file="${work.dir}/TextCellBlank.xlsx"/>
                                    </input>
                                </dido-poi:workbook>
                            </from>
                            <how>
                                <value value="${poi-write.how}"/>
                            </how>
                        </dido:driver>
                        <bus:transformer xmlns:bus="oddjob:beanbus">
                            <function>
                                <dido:to-bean xmlns:dido="oddjob:dido">
                                    <beanClass>
                                        <class name="org.oddjob.dido.poi.layouts.NullAndBlankCellsTest$Fruit"/>
                                    </beanClass>
                                </dido:to-bean>
                            </function>
                        </bus:transformer>
                        <bus:capture xmlns:bus="oddjob:beanbus" id="poi-read"/>
                    </parts>
                </bean-bus>
            </jobs>
        </sequential>
    </job>
</oddjob>
