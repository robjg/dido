<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob>
    <job>
        <sequential>
            <jobs>
                <properties>
                    <values>
                        <file file="./work" key="work.dir"/>
                    </values>
                </properties>
                <bean-bus>
                    <parts>
                        <dido:in id="test-data" name="Load Test Data"
                                 xmlns:dido="oddjob:dido">
                            <from>
                                <buffer><![CDATA[fruit,bestBefore,colour,quantity,price
Apple,2013-11-25,red,3,74.6
Apple,2013-11-27,green,2,46.2
Orange,2013-12-05,,5,215
Pear,2013-11-30,green,1,24.3
Banana,2013-11-21,,7,175.5
]]></buffer>
                            </from>
                            <how>
                                <dido:csv xmlns:dido="oddjob:dido" withHeadings="true"/>
                            </how>
                        </dido:in>
                        <dido:out xmlns:dido="oddjob:dido" id="data-book-write">
                            <to>
                                <dido-poi:workbook xmlns:dido-poi="oddjob:dido:poi">
                                    <output>
                                        <file file="${work.dir}/DataBookExample1.xlsx"/>
                                    </output>
                                </dido-poi:workbook>
                            </to>
                            <how>
                                <dido-poi:rows xmlns:dido-poi="oddjob:dido:poi" sheetName="Fruit" autoFilter="true"
                                               autoWidth="true" withHeadings="true">
                                    <of>
                                        <dido-poi:text name="fruit"/>
                                        <dido-poi:date name="bestBefore"/>
                                        <dido-poi:text name="colour"/>
                                        <dido-poi:numeric name="quantity">
                                            <type>
                                                <class name="int"/>
                                            </type>
                                        </dido-poi:numeric>
                                        <dido-poi:numeric name="price"/>
                                    </of>
                                    <styles>
                                        <dido-poi:style key="heading" bold="true"
                                                        colour="BLUE"/>
                                        <dido-poi:style key="date" format="yyyy-mm-dd"/>
                                    </styles>
                                </dido-poi:rows>
                            </how>
                        </dido:out>
                    </parts>
                </bean-bus>
                <bean-bus>
                    <parts>
                        <dido:in xmlns:dido="oddjob:dido">
                            <from>
                                <dido-poi:workbook xmlns:dido-poi="oddjob:dido:poi">
                                    <input>
                                        <file file="${work.dir}/DataBookExample1.xlsx"/>
                                    </input>
                                </dido-poi:workbook>
                            </from>
                            <how>
                                <value value="${data-book-write.how}"/>
                            </how>
                        </dido:in>
                        <bus:transformer xmlns:bus="oddjob:beanbus">
                            <function>
                                <dido:to-bean xmlns:dido="oddjob:dido">
                                    <beanClass>
                                        <class name="org.oddjob.dido.poi.test.Fruit"/>
                                    </beanClass>
                                </dido:to-bean>
                            </function>
                        </bus:transformer>
                        <bus:capture id="data-book-read" xmlns:bus="oddjob:beanbus"/>
                    </parts>
                </bean-bus>
            </jobs>
        </sequential>
    </job>
</oddjob>
