<oddjob>
    <job>
        <sequential>
            <jobs>
                <dido:match xmlns:dido="http://rgordon.co.uk/oddjob/dido" 
                        id="match" sorted="${sorted}"
                        keyProperties="type" 
                        valueProperties="quantity"
                        otherProperties="colour">
                    <inX>
                        <value value="${listX}"/>
                    </inX>
                    <inY>
                        <value value="${listY}"/>
                    </inY>
                    <out>
                        <list/>
                    </out>                    
                </dido:match>
                <bean-report>
                    <beans>
                        <value value="${match.out}"/>
                    </beans>
                    <output>
                        <buffer id="results"/>
                    </output>
                </bean-report>
            </jobs>
        </sequential>
    </job>
</oddjob>