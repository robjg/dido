<oddjob>
    <job>
        <bean-bus>
            <parts>
                <bus:iterable-driver xmlns:bus="oddjob:beanbus">
                    <beans>
                        <list>
                            <values>
                                <bean class="dido.oddjob.bean.FruitData" type="Apple" qty="5" price="27.2"/>
                                <bean class="dido.oddjob.bean.FruitData" type="Orange" qty="10" price="31.6"/>
                                <bean class="dido.oddjob.bean.FruitData" type="Pear" qty="7" price="22.1"/>
                            </values>
                        </list>
                    </beans>
                </bus:iterable-driver>
                <bus:transformer xmlns:bus="oddjob:beanbus">
                    <function>
                        <dido:to-bean xmlns:dido="oddjob:dido">
                            <beanClass>
                                <class name="dido.oddjob.bean.Fruit"/>
                            </beanClass>
                        </dido:to-bean>
                    </function>
                </bus:transformer>
                <bus:capture xmlns:bus="oddjob:beanbus" id="capture"/>
            </parts>
        </bean-bus>
    </job>
</oddjob>