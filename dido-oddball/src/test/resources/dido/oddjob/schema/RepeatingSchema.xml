        <variables id="vars">
            <schema>
                <dido:schema xmlns:dido="oddjob:dido">
                    <defs>
                        <dido:schema-defs>
                            <schemas>
                                <dido:schema name="Fruit">
                                    <of>
                                        <dido:field index="3" name="Fruit" type="java.lang.String"/>
                                        <dido:field name="Qty" type="int"/>
                                        <dido:field index="8" name="Price" type="double"/>
