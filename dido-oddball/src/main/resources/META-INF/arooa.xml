<arooa:descriptor  xmlns:arooa="http://rgordon.co.uk/oddjob/arooa"
        prefix="dido" namespace="oddjob:dido">
	<conversions>
		<arooa:conversion className="dido.oddjob.bean.ToBeanTransformer$Conversions"/>
		<arooa:conversion className="dido.oddjob.bean.FromBeanTransformer$Conversions"/>
		<arooa:conversion className="dido.oddjob.schema.SchemaBean$Conversions"/>
		<arooa:conversion className="dido.oddjob.schema.SchemaFieldBean$Conversions"/>
		<arooa:conversion className="dido.oddjob.transform.TransformationFactory"
						  methodName="get"/>
		<arooa:conversion className="dido.oddjob.transform.ValueSetFactory"
						  methodName="get"/>
		<arooa:conversion className="dido.oddjob.transform.ValueCopyFactory"
						  methodName="get"/>
	</conversions>
	<values>
		<arooa:bean-def element='schema'
						className='dido.oddjob.schema.SchemaBean'>
			<design>
				<design:form xmlns:design="arooa:design">
					<formItems>
						<design:group bordered="true" title="General">
							<formItems>
								<design:text property="name" title="Name"/>
							</formItems>
						</design:group>
						<design:group bordered="true" title="One Of">
								<formItems>
									<design:radio>
										<formItems>
											<design:text property="named" title="Named"/>
											<design:indexed property="of" title="Of"/>
											<design:indexed property="list" title="List"/>
										</formItems>
									</design:radio>
								</formItems>
						</design:group>
					</formItems>
				</design:form>
			</design>
		</arooa:bean-def>
		<arooa:bean-def element='field'
						className='dido.oddjob.schema.SchemaFieldBean'>
			<design>
				<design:form xmlns:design="arooa:design">
					<formItems>
						<design:group bordered="true" title="General">
							<formItems>
								<design:text property="name" title="Name"/>
								<design:text property="index" title="Index"/>
							</formItems>
						</design:group>
						<design:group bordered="true" title="Either Or">
							<formItems>
								<design:radio>
									<formItems>
										<design:group bordered="true" title="Simple">
											<formItems>
												<design:text property="type" title="Type"/>
											</formItems>
										</design:group>
										<design:group bordered="true" title="Nested">
											<formItems>
												<design:single property="nested" title="Schema"/>
												<design:text property="repeating" title="Repeating"/>
											</formItems>
										</design:group>
									</formItems>
								</design:radio>
							</formItems>
						</design:group>
					</formItems>
				</design:form>
			</design>
		</arooa:bean-def>
		<arooa:bean-def element='to-bean'
		    className='dido.oddjob.bean.ToBeanTransformer'/>
		<arooa:bean-def element='from-bean'
						className='dido.oddjob.bean.FromBeanTransformer'/>
		<arooa:bean-def element='transform'
						className='dido.oddjob.transform.TransformationFactory'/>
		<arooa:bean-def element='copy'
						className='dido.oddjob.transform.ValueCopyFactory'>
			<design>
				<design:form xmlns:design="arooa:design">
					<formItems>
						<design:group bordered="true" title="From">
							<formItems>
								<design:text property="index" title="Index"/>
								<design:text property="field" title="Field"/>
							</formItems>
						</design:group>
						<design:group bordered="true" title="To">
							<formItems>
								<design:text property="at" title="Index"/>
								<design:text property="to" title="Field"/>
								<design:single property="type" title="Type"/>
								<design:single property="function" title="Function"/>
							</formItems>
						</design:group>
					</formItems>
				</design:form>
			</design>
		</arooa:bean-def>
		<arooa:bean-def element='set'
						className='dido.oddjob.transform.ValueSetFactory'>
			<design>
				<design:form xmlns:design="arooa:design">
					<formItems>
						<design:group bordered="true" title="Properties">
							<formItems>
								<design:text property="index" title="Index"/>
								<design:text property="field" title="Field"/>
								<design:single property="value" title="Value"/>
								<design:single property="type" title="Type"/>
							</formItems>
						</design:group>
					</formItems>
				</design:form>
			</design>
		</arooa:bean-def>
	</values>
	<components>
		<arooa:bean-def element='converter'
						className='dido.oddjob.util.DidoConverterJob'/>
		<arooa:bean-def element="data-in"
						className="dido.oddjob.beanbus.DataInDriver">
			<design>
				<design:form xmlns:design="arooa:design">
					<formItems>
						<design:group bordered="true" title="Required">
							<formItems>
								<design:single property="how" title="How"/>
								<design:single property="from" title="From"/>
							</formItems>
						</design:group>
						<design:group bordered="true" title="Optional">
							<formItems>
								<design:text property="name" title="Name"/>
								<design:single property="to" title="To"/>
							</formItems>
						</design:group>
					</formItems>
				</design:form>
			</design>
		</arooa:bean-def>
		<arooa:bean-def element="data-out"
						className="dido.oddjob.beanbus.DataOutDestination">
			<design>
				<design:form xmlns:design="arooa:design">
					<formItems>
						<design:group bordered="true" title="Required">
							<formItems>
								<design:single property="how" title="How"/>
								<design:single property="to" title="To"/>
							</formItems>
						</design:group>
						<design:group bordered="true" title="Optional">
							<formItems>
								<design:text property="name" title="Name"/>
								<design:single property="next" title="Next"/>
							</formItems>
						</design:group>
					</formItems>
				</design:form>
			</design>
		</arooa:bean-def>
	</components>
</arooa:descriptor>