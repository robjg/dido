<oddjob>
    <job>
        <bean-bus>
            <parts>
                <dido:driver xmlns:dido="oddjob:dido">
                    <from>
                        <buffer>Apple,5,27.2
Orange,10,31.6
Pear,7,22.1</buffer>
                    </from>
                    <how>
                        <dido:csv xmlns:dido="oddjob:dido">
                            <schema>
                                <dido:schema>
                                    <of>
                                        <dido:field name="type"/>
                                        <dido:field type="int" name="quantity"/>
                                        <dido:field type="double" name="price"/>
                                    </of>
                                </dido:schema>
                            </schema>
                        </dido:csv>
                    </how>
                </dido:driver>
                <bus:transformer xmlns:bus="oddjob:beanbus">
                    <function>
                        <dido:to-bean className="dido.csv.Fruit" xmlns:dido="oddjob:dido"/>
                    </function>
                </bus:transformer>
                <bus:capture xmlns:bus="oddjob:beanbus" id="capture"/>
            </parts>
        </bean-bus>
    </job>
</oddjob>